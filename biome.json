{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "info"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"style": {
				"noNonNullAssertion": {
					"level": "info",
					"fix": "none"
				},
				"noParameterAssign": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": ["package.json", "node_modules/**/*"]
	}
}
