{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"root": true,
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "info"
			},
			"style": {
				"noNonNullAssertion": {
					"level": "info",
					"fix": "none",
					"options": {}
				},
				"noParameterAssign": "info"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!**/package.json"]
	}
}
